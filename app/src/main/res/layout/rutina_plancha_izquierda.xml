<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/bgnegro"
    android:padding="15dp"
    android:layout_height="match_parent"
    tools:context=".Plancha">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/plancha"
        android:contentDescription="@string/imagendeejercicio"
        tools:srcCompat="@tools:sample/avatars"
        >
    </ImageView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textAlignment="center"
        android:paddingTop="15dp"
        android:text="@string/plancha_izquierda"
        android:textColor="@color/boton"
        android:fontFamily="@font/poppinsbold">
    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:text="@string/infoplanchalateral"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:fontFamily="@font/poppinsbold"
        android:textSize="18sp">
    </TextView>

</LinearLayout>