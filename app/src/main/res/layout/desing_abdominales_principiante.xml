<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/bgnegro"
    android:padding="20dp"
    android:layout_height="match_parent"
    tools:context=".AbdominalesPrincipiante">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:fontFamily="@font/poppinsbold"
            android:text="@string/wod1_lbl_principiante"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textSize="24sp"
            android:textColor="@color/boton"
            android:textStyle="bold">
        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ejercicio1abP"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_marginEnd="20dp"
                android:contentDescription="@string/imagendeejercicio"
                android:src="@drawable/saltotijer"
                >
            </ImageView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="15dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppinsbold"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    android:text="@string/run"
                    android:textColor="@color/white">
                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingTop="10dp"
                    android:fontFamily="@font/poppinsbold"
                    android:textAlignment="center"
                    android:text="@string/run_800"
                    android:textColor="@color/white">
                </TextView>

            </LinearLayout>

            <ImageButton
                android:id="@+id/infoEjer1AbP"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"

                android:onClick="infotijera"
                android:background="@color/transparente"
                android:contentDescription="@string/iconoayuda"
                android:src="@drawable/ic_info"
                tools:ignore="DuplicateSpeakableTextCheck">
            </ImageButton>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="125dp"
                android:layout_height="135dp"
                android:id="@+id/ejercicio2abP"
                android:layout_marginEnd="20dp"
                android:src="@drawable/crunch"
                android:contentDescription="@string/imagendeejercicio">
            </ImageView>

            <LinearLayout
                android:layout_width="157dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="15dp">

                <TextView
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppinsbold"
                    android:paddingTop="10dp"
                    android:text="@string/kneeasistedpushups"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="16sp"></TextView>

                <TextView
                    android:layout_width="142dp"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/poppinsbold"
                    android:text="@string/repeticiones50"
                    android:textAlignment="center"
                    android:textColor="@color/white"></TextView>

            </LinearLayout>

            <ImageButton
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/infoEjer2AbP"
                android:src="@drawable/ic_info"
                android:background="@color/transparente"
                android:layout_gravity="center"
                android:onClick="infocrunch"
                android:contentDescription="@string/iconoayuda">
            </ImageButton>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ejercicio3abP"
                android:layout_width="125dp"
                android:layout_height="135dp"
                android:layout_marginEnd="20dp"
                android:contentDescription="@string/imagendeejercicio"
                android:src="@drawable/mountain"
                tools:ignore="ImageContrastCheck"></ImageView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="15dp">

                <TextView
                    android:layout_width="121dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppinsbold"
                    android:text="@string/bandassistedpullups"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="16sp"></TextView>

                <TextView
                    android:layout_width="123dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppinsbold"
                    android:text="@string/repeticiones100"
                    android:textAlignment="center"
                    android:textColor="@color/white"></TextView>

            </LinearLayout>

            <ImageButton
                android:id="@+id/infoEjer3AbP"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@color/transparente"
                android:contentDescription="@string/iconoayuda"
                android:onClick="infomountain"
                android:src="@drawable/ic_info"></ImageButton>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ejercicio4abP"
                android:layout_width="125dp"
                android:layout_height="135dp"
                android:layout_marginEnd="20dp"
                android:contentDescription="@string/imagendeejercicio"
                android:src="@drawable/abelevados">
            </ImageView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="106dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppinsbold"
                    android:text="@string/airsquats"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="14sp">
                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingTop="15dp"
                    android:fontFamily="@font/poppinsbold"
                    android:textAlignment="center"
                    android:text="@string/repeticiones150"
                    android:textColor="@color/white">
                </TextView>

            </LinearLayout>

            <ImageButton
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/infoEjer4AbP"
                android:src="@drawable/ic_info"
                android:background="@color/transparente"
                android:layout_gravity="center"
                android:onClick="infoabelevados"
                android:contentDescription="@string/iconoayuda">
            </ImageButton>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ejercicio5abP"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_marginEnd="20dp"
                android:contentDescription="@string/imagendeejercicio"
                android:src="@drawable/saltotijer"
                >
            </ImageView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="15dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppinsbold"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    android:text="@string/run"
                    android:textColor="@color/white">
                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingTop="10dp"
                    android:fontFamily="@font/poppinsbold"
                    android:textAlignment="center"
                    android:text="@string/run_800"
                    android:textColor="@color/white">
                </TextView>

            </LinearLayout>

            <ImageButton
                android:id="@+id/infoEjer5AbP"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"

                android:onClick="infotijera"
                android:background="@color/transparente"
                android:contentDescription="@string/iconoayuda"
                android:src="@drawable/ic_info"
                tools:ignore="DuplicateSpeakableTextCheck">
            </ImageButton>

        </LinearLayout>


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:onClick="finabprin"
            android:id="@+id/btnAbconcluirPrincipiante"
            android:text="@string/concluir_entrenamiento"
            >
        </Button>

    </LinearLayout>

</ScrollView>