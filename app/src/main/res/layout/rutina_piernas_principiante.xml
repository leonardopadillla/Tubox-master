<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/bgnegro"
    android:padding="20dp"
    android:layout_height="match_parent"
    tools:context=".PiernasPrincipiante">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:text="@string/piernas_principiante"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textSize="24sp"
            android:textColor="@color/boton"
            android:textStyle="bold">
        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ejercicio1PP"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_marginEnd="20dp"
                android:contentDescription="@string/imagendeejercicio"
                android:src="@drawable/saltotijer"
                >
            </ImageView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="15dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:fontFamily="@font/poppinsbold"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    android:text="@string/saltos_de_tijera"
                    android:textColor="@color/white">
                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/poppinsbold"
                    android:textAlignment="center"
                    android:text="@string/repeticiones_n_x30"
                    android:textColor="@color/white">
                </TextView>

            </LinearLayout>

            <ImageButton
                android:id="@+id/infoEjer1PP"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:onClick="infotijera"
                android:background="@color/transparente"
                android:contentDescription="@string/iconoayuda"
                android:src="@drawable/ic_info"
                tools:ignore="DuplicateSpeakableTextCheck">
            </ImageButton>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="125dp"
                android:layout_height="135dp"
                android:id="@+id/ejercicio2PP"
                android:layout_marginEnd="20dp"
                android:src="@drawable/sentadilla"
                android:contentDescription="@string/imagendeejercicio">
            </ImageView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="15dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:fontFamily="@font/poppinsbold"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    android:text="@string/sentadilla"
                    android:textColor="@color/white">
                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingTop="15dp"
                    android:textAlignment="center"
                    android:fontFamily="@font/poppinsbold"
                    android:text="@string/repeticiones_n_x30"
                    android:textColor="@color/white">
                </TextView>

            </LinearLayout>

            <ImageButton
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/infoEjer2AbP"
                android:src="@drawable/ic_info"
                android:background="@color/transparente"
                android:layout_gravity="center"
                android:onClick="infosentadilla"
                android:contentDescription="@string/iconoayuda">
            </ImageButton>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ejercicio3abP"
                android:layout_width="125dp"
                android:layout_height="135dp"
                android:layout_marginEnd="20dp"
                android:rotation="-90"
                android:contentDescription="@string/imagendeejercicio"
                android:src="@drawable/sentadillasalt"
                tools:ignore="ImageContrastCheck">
            </ImageView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="15dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppinsbold"
                    android:textAlignment="center"
                    android:textSize="15sp"
                    android:text="@string/sentadilla_con_salto"
                    android:textColor="@color/white">
                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textAlignment="center"
                    android:fontFamily="@font/poppinsbold"
                    android:text="@string/repeticiones_n_x15_n_series_2"
                    android:textColor="@color/white">
                </TextView>

            </LinearLayout>

            <ImageButton
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/infoEjer3AbP"
                android:src="@drawable/ic_info"
                android:background="@color/transparente"
                android:layout_gravity="center"
                android:onClick="infosentadillasalto"
                android:contentDescription="@string/iconoayuda">
            </ImageButton>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ejercicio4abP"
                android:layout_width="125dp"
                android:layout_height="135dp"
                android:layout_marginEnd="20dp"
                android:contentDescription="@string/imagendeejercicio"
                android:src="@drawable/elevapiernalat">
            </ImageView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="15dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppinsbold"
                    android:text="@string/elevacion_de_piernas_lateral"
                    android:textColor="@color/white">
                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textAlignment="center"
                    android:fontFamily="@font/poppinsbold"
                    android:text="@string/repeticiones_n_x20_n_series_2d"
                    android:textColor="@color/white">
                </TextView>

            </LinearLayout>

            <ImageButton
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/infoEjer4AbP"
                android:src="@drawable/ic_info"
                android:background="@color/transparente"
                android:layout_gravity="center"
                android:onClick="infoelevacionlateral"
                android:contentDescription="@string/iconoayuda">
            </ImageButton>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ejercicio6abP"
                android:layout_width="125dp"
                android:layout_height="135dp"
                android:layout_marginEnd="20dp"
                android:contentDescription="@string/imagendeejercicio"
                android:src="@drawable/patadaburro">
            </ImageView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="15dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/patada_de_burro"
                    android:fontFamily="@font/poppinsbold"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="16sp">
                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/poppinsbold"
                    android:textAlignment="center"
                    android:text="@string/repeticiones_n_x20s_n_series_2"
                    android:textColor="@color/white">
                </TextView>

            </LinearLayout>

            <ImageButton
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/infoEjer5AbP"
                android:src="@drawable/ic_info"
                android:background="@color/transparente"
                android:layout_gravity="center"
                android:onClick="infopatadaburro"
                android:contentDescription="@string/iconoayuda">
            </ImageButton>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ejercicio5abP"
                android:layout_width="125dp"
                android:layout_height="135dp"
                android:layout_marginEnd="20dp"
                android:contentDescription="@string/imagendeejercicio"
                android:src="@drawable/firehydrant">
            </ImageView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="15dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:fontFamily="@font/poppinsbold"
                    android:textSize="15sp"
                    android:text="@string/fire_hydrant_nambas_piernas"
                    android:textColor="@color/white">
                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingTop="5dp"
                    android:fontFamily="@font/poppinsbold"
                    android:textAlignment="center"
                    android:text="@string/repeticiones_n_x15"
                    android:textColor="@color/white">
                </TextView>

            </LinearLayout>

            <ImageButton
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/infoEjer6AbP"
                android:src="@drawable/ic_info"
                android:background="@color/transparente"
                android:layout_gravity="center"
                android:onClick="infofirehydrant"

                android:contentDescription="@string/iconoayuda">
            </ImageButton>

        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:onClick="finentrenamientoPierPrin"
            android:id="@+id/btnPiernasconcluirPrin"
            android:text="@string/concluir_entrenamiento"
            >
        </Button>

    </LinearLayout>

</ScrollView>